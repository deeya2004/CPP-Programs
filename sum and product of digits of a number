#include <iostream>
using namespace std;
int main() {
  // sum and product of the digits of a number
  int n;
  cout << "Enter the value of n: ";
  cin >> n;
  int product = 1;
  int sum = 0;
  while (n != 0) {
    int digit = n % 10;
    product = product * digit;
    sum = sum + digit;
    n = n / 10;
  }
  cout << "product of the digits is: " << product << endl;
  cout << "Sum of the digits is: " << sum << endl;
};
