#include <iostream>
using namespace std;
int main() {
  // continue statement-
  int n;
  cout << "Enter the value of n: ";
  cin >> n;
  for (int i = 0; i < n; i++) {
    cout << " hello " << endl;
    cout << " hi " << endl;
    continue; // continue k baad wali statement execute nhi hoti or loop dubara
              // start hone lgta h
    cout << "how are you?" << endl;
  }
  cout << endl;
//printing even numbers
  int m;
  cout << "Enter the value of m: ";
  cin >> m;
  for (int j = 0; j < m; j++) {
    if (j & 1) {
      continue;//if j is odd then this statement will be executed
    }
    cout << j << endl;
  }
};
