#include <iostream>
using namespace std;
int main(){
  /* //pattern
    12345
    1234*
    123**
    12***
    1****
            */
  int n;
  cout<<"enter the value of n:"<<endl;
  cin>>n;
  int i=1;
while( i<=n){
  int j=1;
  while (j<=n-i+1){
    cout<<j;
    j=j+1;
  }
  int k=1;
  while(k<=n-j+1){
    cout<<"*";
    k=k+1;
  }
  cout<<endl;
  i=i+1;

}
  
  
};
